<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_JoselinM.Views.UserChangePasswordPage">
    <ContentPage.Content>
        <StackLayout Padding = "20">

            <Entry x:Name="TxtPassword_1" Placeholder="Old password" FontSize="30" 
                Keyboard="Default" IsPassword="True" />

            <Entry x:Name="TxtPassword_2" Placeholder="New Password" FontSize="30" 
                Keyboard="Default" IsPassword="True" />

            <Entry x:Name="TxtPassword_3" Placeholder="Confirm Password" FontSize="30" 
                Keyboard="Default" IsPassword="True" />

            <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled" />

            <Button x:Name="BtnUpdate" Text="Change" BackgroundColor="DarkGreen" CornerRadius="15" Clicked="BtnUpdate_Clicked" />

            <Button x:Name="BtnCancel" Text="Cancel" BackgroundColor="PaleVioletRed" CornerRadius="15" Clicked="BtnCancel_Clicked" />







        </StackLayout>
    </ContentPage.Content>
</ContentPage>